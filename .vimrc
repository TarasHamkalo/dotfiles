set nocompatible
set scrolloff=10
set number
set relativenumber
set mousehide
set incsearch
set ignorecase
set smartcase
set noerrorbells 
set belloff=all
set visualbell

"Default mapping
nmap <c-h> <c-w>h
nmap <c-j> <c-w>j
nmap <c-k> <c-w>k
nmap <c-l> <c-w>l
nnoremap <C-u> <C-u>zz
nnoremap <C-d> <C-d>zz
nnoremap n nzz
nnoremap N Nzz
